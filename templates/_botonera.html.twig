{# agendaS4/templates/_botonera.html.twig #}

    <ul class="list-inline">
        {# index #}
        {% if botonera_link_index is defined %}
            <li class="list-inline-item">
                <a class="btn btn-primary btn-sm" role="button" href="{{ botonera_link_index }}">
                    <i class="fas fa-list agenda-ico"></i>
                    {{ 'etiqueta.boton_listado'|trans }}
                </a>
            </li>
        {% endif %}
        {# new #}
        {% if botonera_link_new is defined %}
            <li class="list-inline-item">
                <a class="btn btn-primary btn-sm" role="button" href="{{ botonera_link_new }}">
                    <i class="fas fa-plus agenda-ico"></i>
                    {{ 'etiqueta.boton_nuevo'|trans }}
                </a>
            </li>
        {% endif %}
        {# show #}
        {% if botonera_link_show is defined %}
            <li class="list-inline-item">
                <a class="btn btn-info btn-sm" role="button" href="{{ botonera_link_show }}">
                    <i class="fas fa-eye agenda-ico"></i>
                    {{ 'etiqueta.boton_mostrar'|trans }}
                </a>
            </li>
        {% endif %}
        {# edit #}
        {% if botonera_link_edit is defined %}
            <li class="list-inline-item">
                <a class="btn btn-success btn-sm" role="button" href="{{ botonera_link_edit }}">
                    <i class="fas fa-edit agenda-ico"></i>
                    {{ 'etiqueta.boton_editar'|trans }}
                </a>
            </li>
        {% endif %}
        {# delete #}
        {% if botonera_form_delete is defined %}
            <li class="list-inline-item">
                {{ include( botonera_form_delete ) }}
            </li>
        {% endif %}
    </ul >
