{#  agendaS4/templates/contacto/index.html.twig #}

{# Plantilla base del contacto #}
{% extends '/contacto/base.html.twig' %}

{# Cuerpo de la plantilla base #}
{% block body %}

    {# Botonera #}
    <div class="row agenda-botonera">
        <div class="col-sm-4">
            <h4><i class="fas fa-address-book agenda-ico"></i>{{ 'contacto.titulo_listado'|trans({},'contacto') }}</h4>
        </div>
        <div class="col-sm-8 text-right">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class="btn btn-primary btn-sm" role="button" href="{{ path('contacto_new') }}">
                        <i class="fas fa-plus agenda-ico"></i>
                        {{ 'etiqueta.boton_nuevo'|trans }}
                    </a>
                </li>
            </ul>
        </div>
    </div>

    {# Tabla index #}
    <table class="table table-striped table-bordered agenda-tabla-index">
        <thead>
            <tr>
                <th>{{ 'item'|trans }}</th>
                <th>{{ 'nombre'|trans }}</th>
                <th>{{ 'acciones'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for contacto in contactos %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ contacto.nombre }}</td>
                <td>
                    {# Botones #}
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <a class="btn btn-info btn-sm" role="button" href="{{ path('contacto_show', {'id': contacto.id}) }}">
                                <i class="fas fa-eye agenda-ico"></i>
                                {{ 'etiqueta.boton_mostrar'|trans }}
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a class="btn btn-success btn-sm" role="button" href="{{ path('contacto_edit', {'id': contacto.id}) }}">
                                <i class="fas fa-edit agenda-ico"></i>
                                {{ 'etiqueta.boton_editar'|trans }}
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'mensaje.tabla_vacia'|trans({},'mensaje') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock body %}
