{#  agendaS4/templates/contacto/edit.html.twig #}

{# Plantilla base del contacto #}
{% extends '/contacto/base.html.twig' %}

{# Cuerpo de la plantilla base #}
{% block body %}

    {# Botonera #}
    <div class="row agenda-botonera">
        <div class="col-sm-6">
            <h4><i class="fas fa-address-book agenda-ico"></i>{{ 'contacto.titulo_editar'|trans({},'contacto') }}</h4>
        </div>
        <div class="col-sm-6 text-right">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class="btn btn-primary btn-sm" role="button" href="{{ path('contacto_index') }}">
                        <i class="fas fa-list agenda-ico"></i>
                        {{ 'etiqueta.boton_listado'|trans }}
                    </a>
                </li>
                <li class="list-inline-item">
                    {{ include('contacto/_delete_form.html.twig') }}
                </li>
            </ul>
        </div>
    </div>

    {# Formulario edit #}
    {{ include('contacto/_form.html.twig', {'button_label': 'etiqueta.boton_actualizar'|trans }) }}

{% endblock body %}
