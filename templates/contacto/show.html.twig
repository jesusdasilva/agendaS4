{#  agendaS4/templates/contacto/show.html.twig #}

{# Plantilla base del contacto #}
{% extends '/contacto/base.html.twig' %}

{# Cuerpo de la plantilla base #}
{% block body %}

    {# Botonera #}
    <div class="row agenda-botonera">
        <div class="col-sm-4">
            <h4><i class="fas fa-address-book agenda-ico"></i>{{ 'contacto.titulo_mostrar'|trans({},'contacto') }}</h4>
        </div>
        <div class="col-sm-8 text-right">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class="btn btn-primary btn-sm" role="button" href="{{ path('contacto_index') }}">
                        <i class="fas fa-list agenda-ico"></i>
                        {{ 'etiqueta.boton_listado'|trans }}
                    </a>
                </li>
                <li class="list-inline-item">
                    <a class="btn btn-success btn-sm" role="button" href="{{ path('contacto_edit', {'id': contacto.id}) }}">
                        <i class="fas fa-edit agenda-ico"></i>
                        {{ 'etiqueta.boton_editar'|trans }}
                    </a>
                </li>
                <li class="list-inline-item">
                    {{ include('contacto/_delete_form.html.twig') }}
                </li>
            </ul>
        </div>
    </div>

    {# Tabla show #}
    <table class="table table-striped table-bordered agenda-tabla-show">
        <tbody>
            <tr>
                <th>{{ 'contacto.etiqueta_nombre'|trans({},'contacto') }}</th>
                <td>{{ contacto.nombre }}</td>
            </tr>
            <tr>
                <th>{{ 'contacto.etiqueta_direccion'|trans({},'contacto') }}</th>
                <td>{{ contacto.direccion }}</td>
            </tr>
            <tr>
                <th>{{ 'contacto.etiqueta_telefono'|trans({},'contacto') }}</th>
                <td>{{ contacto.telefono }}</td>
            </tr>
            <tr>
                <th>{{ 'contacto.etiqueta_email'|trans({},'contacto') }}</th>
                <td>{{ contacto.email }}</td>
            </tr>
            <tr>
                <th>{{ 'contacto.etiqueta_grupo'|trans({},'contacto') }}</th>
                <td>{{ contacto.grupo }}</td>
            </tr>
        </tbody>
    </table>

{% endblock body %}
